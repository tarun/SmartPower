<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xalan="http://xml.apache.org/xslt" xmlns:webproject2="http://www.netbeans.org/ns/web-project/2" xmlns:jaxws="http://www.netbeans.org/ns/jax-ws/1">
    <!--
                ===================
                JAX-WS WSIMPORT SECTION
                ===================
            -->
    <target name="wsgen-init" depends="init, -do-compile">
        <mkdir dir="${build.generated.dir}/wsgen/service"/>
        <mkdir dir="${build.generated.dir}/wsgen/binaries"/>
        <mkdir dir="${build.classes.dir}"/>
        <taskdef name="wsgen" classname="com.sun.tools.ws.ant.WsGen">
            <classpath path="${java.home}/../lib/tools.jar:${build.classes.dir}:${j2ee.platform.wsgen.classpath}:${javac.classpath}"/>
        </taskdef>
    </target>
    <target name="wsgen-SmartDeviceForSmartMeter" depends="wsgen-init">
        <wsgen fork="true" xendorsed="true" sourcedestdir="${build.generated.dir}/wsgen/service" resourcedestdir="${build.generated.dir}/wsgen/service" destdir="${build.generated.dir}/wsgen/binaries" keep="true" genwsdl="true" sei="home.devices.smartdevice.SmartDeviceForSmartMeter">
            <classpath path="${java.home}/../lib/tools.jar:${build.classes.dir}:${j2ee.platform.wsgen.classpath}:${javac.classpath}"/>
            <jvmarg value="-Djava.endorsed.dirs=${jaxws.endorsed.dir}"/>
        </wsgen>
    </target>
    <target name="wsgen-service-compile" depends="wsgen-SmartDeviceForSmartMeter">
        <webproject2:javac srcdir="${build.generated.dir}/wsgen/service" classpath="${j2ee.platform.wsimport.classpath}:${javac.classpath}" destdir="${build.classes.dir}"/>
    </target>
    <target name="wsimport-init" depends="init">
        <mkdir dir="${build.generated.dir}/wsimport/client"/>
        <mkdir dir="${build.generated.dir}/wsimport/binaries"/>
        <taskdef name="wsimport" classname="com.sun.tools.ws.ant.WsImport">
            <classpath path="${java.home}/../lib/tools.jar:${j2ee.platform.wsimport.classpath}:${javac.classpath}"/>
        </taskdef>
        <condition property="conf-dir" value="${conf.dir}/" else="">
            <isset property="conf.dir"/>
        </condition>
    </target>
    <target name="wsimport-client-check-SmartMeterForDevicesService" depends="wsimport-init">
        <condition property="wsimport-client-SmartMeterForDevicesService.notRequired">
            <available file="${build.generated.dir}/wsimport/client/home/power/smartmeter" type="dir"/>
        </condition>
    </target>
    <target name="wsimport-client-SmartMeterForDevicesService" depends="wsimport-init,wsimport-client-check-SmartMeterForDevicesService" unless="wsimport-client-SmartMeterForDevicesService.notRequired">
        <wsimport xendorsed="true" verbose="true" sourcedestdir="${build.generated.dir}/wsimport/client" extension="true" destdir="${build.generated.dir}/wsimport/binaries" wsdl="${basedir}/${conf-dir}xml-resources/web-service-references/SmartMeterForDevicesService/wsdl/153.104.108.66_8080/SmartMeter/SmartMeterForDevicesService.wsdl" wsdlLocation="http://153.104.108.66:8080/SmartMeter/SmartMeterForDevicesService?wsdl" catalog="catalog.xml"/>
        <copy todir="${build.classes.dir}">
            <fileset dir="${build.generated.dir}/wsimport/binaries" includes="**/*.xml"/>
        </copy>
    </target>
    <target name="wsimport-client-clean-SmartMeterForDevicesService" depends="-init-project">
        <delete dir="${build.generated.dir}/wsimport/client/home/power/smartmeter"/>
    </target>
    <target name="wsimport-client-generate" depends="wsimport-client-SmartMeterForDevicesService"/>
    <target name="wsimport-client-compile" depends="-pre-pre-compile">
        <webproject2:javac srcdir="${build.generated.dir}/wsimport/client" classpath="${j2ee.platform.wsimport.classpath}:${javac.classpath}" destdir="${build.classes.dir}"/>
    </target>
</project>
